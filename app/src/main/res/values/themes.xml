<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <color name="mushaf">#f7fce3</color>

    <style name="Theme.Black" parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="pagerTitleStripBackground">#333333</item>
        <item name="pagerTitleStripTextColor">#fff</item>
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="android:actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
    </style>

    <style name="Theme.White" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="pagerTitleStripBackground">#33b5e5</item>
        <item name="pagerTitleStripTextColor">#fff</item>
    </style>

    <style name="Theme.Mushaf" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/mushaf</item>
        <item name="android:colorBackgroundCacheHint">@color/mushaf</item>
        <item name="pagerTitleStripBackground">#88b131</item>
        <item name="pagerTitleStripTextColor">#fff</item>
    </style>

</resources>